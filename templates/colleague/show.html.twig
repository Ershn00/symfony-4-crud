{% extends 'base.html.twig' %}

{% block title %}Colleague{% endblock %}

{% block body %}
    <h1>Colleague</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ colleague.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ colleague.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ colleague.email }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ colleague.image }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ colleague.notes }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ colleague.createdAt ? colleague.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('colleague_index') }}">back to list</a>

    <a href="{{ path('send_greeting', {'name': colleague.name, 'email': colleague.email}) }}">Send Greeting!</a>

    <a href="{{ path('colleague_edit', {'id': colleague.id}) }}">edit</a>

    {{ include('colleague/_delete_form.html.twig') }}
{% endblock %}
