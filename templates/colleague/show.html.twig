{% extends 'base.html.twig' %}

{% block title %}Colleague{% endblock %}

{% block body %}
    <h1 class="mt-5">Colleague</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ colleague.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ colleague.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ colleague.email }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ asset(image_dir ~ colleague.image) }}" width="300" alt=""></td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ colleague.notes }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ colleague.createdAt ? colleague.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('colleague_index') }}" role="button">Back to list</a>

    <a class="btn btn-success" href="{{ path('send_greeting', {'name': colleague.name, 'email': colleague.email}) }}" role="button">Send Greeting!</a>

    <a class="btn btn-warning" href="{{ path('colleague_edit', {'id': colleague.id}) }}" role="button">Edit</a>

    <p>{{ include('colleague/_delete_form.html.twig') }}</p>
{% endblock %}
