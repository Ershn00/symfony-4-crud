{% extends 'base.html.twig' %}

{% block title %}Colleague index{% endblock %}

{% block body %}
    <h1 class="mt-5">Colleague index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Picture</th>
                <th>Notes</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for colleague in colleagues %}
            <tr>
                <td>{{ colleague.id }}</td>
                <td>{{ colleague.name }}</td>
                <td>{{ colleague.email }}</td>
                <td>{{ colleague.image }}</td>
                <td>{{ colleague.notes }}</td>
                <td>{{ colleague.createdAt ? colleague.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('colleague_show', {'id': colleague.id}) }}">show</a>
                    <a href="{{ path('colleague_edit', {'id': colleague.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('colleague_new') }}">Create new</a>
{% endblock %}
